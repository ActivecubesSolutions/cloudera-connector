	public static void MojoLogMsg(String msg){
		Calendar cal = Calendar.getInstance();
	    DateFormat df = DateFormat.getDateTimeInstance(DateFormat.SHORT,
	        DateFormat.LONG);
	    System.out.println(df.format(cal.getTime()) + ": " + msg);
	}
	
